{
  "hooks": {
    "PermissionRequest": [
      {
        "matcher": "BashTool",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/log_permission_request.mjs"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "BashTool",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/prevent_cwd_delete.mjs"
          }
        ]
      }
    ]
  },
  "env": {
    "CLAUDE_PROJECT_DIR": "${workspaceFolder}"
  }
}
